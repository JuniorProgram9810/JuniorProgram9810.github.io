<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PollAventuras.Views.Support.NewTicketPage"
             Title="Nuevo Ticket">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Crear Nuevo Ticket" 
                   FontSize="Title" 
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <Frame BorderColor="LightGray" 
                   CornerRadius="10" 
                   Padding="15"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1A1A1A}">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Título:" FontAttributes="Bold"/>
                    <Entry Text="{Binding Title}" 
                           Placeholder="Ej: Problema con el nivel 3"
                           ClearButtonVisibility="WhileEditing"/>

                    <Label Text="Descripción:" 
                           FontAttributes="Bold" 
                           Margin="0,10,0,0"/>
                    <Editor Text="{Binding Description}" 
                           HeightRequest="150" 
                           Placeholder="Describe tu problema en detalle..."
                           AutoSize="TextChanges"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Enviar Ticket" 
                   Command="{Binding SubmitTicketCommand}"
                   BackgroundColor="{StaticResource Primary}"
                   TextColor="White"
                   CornerRadius="10"
                   HeightRequest="50"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>