<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppIntegradora10A.Views.RegisterPage"
             Title="Registro de Usuario"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <StackLayout Padding="30,20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="#3366FF" HasShadow="True" CornerRadius="15" Margin="0,0,0,30">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="👤" FontSize="32" TextColor="White" VerticalOptions="Center"/>
                    <Label Text="Crear Nueva Cuenta" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Información -->
            <Frame BackgroundColor="#E8F4FD" CornerRadius="10" Padding="15">
                <StackLayout>
                    <Label Text="🎮 Únete a nuestra comunidad de gamers" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"/>
                    <Label Text="Crea tu cuenta para reportar incidencias y ayudar a mejorar la experiencia de juego" 
                           FontSize="12" 
                           TextColor="#5D6D7E"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Email -->
            <Label Text="EMAIL ADDRESS" FontSize="12" TextColor="#5D6D7E" FontAttributes="Bold"/>
            <Frame CornerRadius="12" BorderColor="#DDD" BackgroundColor="White" HasShadow="True" Padding="0">
                <StackLayout Orientation="Horizontal" Padding="15,10">
                    <Label Text="📧" FontSize="18" VerticalOptions="Center"/>
                    <Entry x:Name="emailEntry" 
                           Placeholder="ejemplo@gmail.com" 
                           FontSize="16" 
                           TextColor="#2C3E50"
                           HorizontalOptions="FillAndExpand"
                           BackgroundColor="Transparent"/>
                </StackLayout>
            </Frame>

            <!-- Password -->
            <Label Text="CONTRASEÑA" FontSize="12" TextColor="#5D6D7E" FontAttributes="Bold"/>
            <Frame CornerRadius="12" BorderColor="#DDD" BackgroundColor="White" HasShadow="True" Padding="0">
                <StackLayout Orientation="Horizontal" Padding="15,10">
                    <Label Text="🔒" FontSize="18" VerticalOptions="Center"/>
                    <Entry x:Name="passwordEntry" 
                           Placeholder="Mínimo 6 caracteres" 
                           IsPassword="True" 
                           FontSize="16" 
                           TextColor="#2C3E50"
                           HorizontalOptions="FillAndExpand"
                           BackgroundColor="Transparent"/>
                </StackLayout>
            </Frame>

            <!-- Confirm Password -->
            <Label Text="CONFIRMAR CONTRASEÑA" FontSize="12" TextColor="#5D6D7E" FontAttributes="Bold"/>
            <Frame CornerRadius="12" BorderColor="#DDD" BackgroundColor="White" HasShadow="True" Padding="0">
                <StackLayout Orientation="Horizontal" Padding="15,10">
                    <Label Text="🔐" FontSize="18" VerticalOptions="Center"/>
                    <Entry x:Name="confirmPasswordEntry" 
                           Placeholder="Repite tu contraseña" 
                           IsPassword="True" 
                           FontSize="16" 
                           TextColor="#2C3E50"
                           HorizontalOptions="FillAndExpand"
                           BackgroundColor="Transparent"/>
                </StackLayout>
            </Frame>

            <!-- Nombre de Usuario Gamer (Opcional) -->
            <Label Text="NOMBRE DE GAMER (Opcional)" FontSize="12" TextColor="#5D6D7E" FontAttributes="Bold"/>
            <Frame CornerRadius="12" BorderColor="#DDD" BackgroundColor="White" HasShadow="True" Padding="0">
                <StackLayout Orientation="Horizontal" Padding="15,10">
                    <Label Text="🎮" FontSize="18" VerticalOptions="Center"/>
                    <Entry x:Name="gamerNameEntry" 
                           Placeholder="Tu nombre en el juego" 
                           FontSize="16" 
                           TextColor="#2C3E50"
                           HorizontalOptions="FillAndExpand"
                           BackgroundColor="Transparent"/>
                </StackLayout>
            </Frame>

            <!-- Términos y Condiciones -->
            <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10">
                <CheckBox x:Name="termsCheckBox" Color="#3366FF"/>
                <Label Text="Acepto los términos y condiciones del servicio" 
                       FontSize="12" 
                       TextColor="#5D6D7E"
                       VerticalOptions="Center"
                       FlexLayout.Grow="1">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTermsTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

            <!-- Botones -->
            <StackLayout Spacing="15" Margin="0,20,0,0">
                <Button Text="✅ Crear Cuenta" 
                        x:Name="OnRegister" 
                        Clicked="OnRegister_Clicked"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HeightRequest="50"/>

                <Button Text="⬅️ Volver al Login" 
                        x:Name="OnBackToLogin" 
                        Clicked="OnBackToLogin_Clicked"
                        BackgroundColor="#95A5A6"
                        TextColor="White"
                        FontSize="14"
                        CornerRadius="25"
                        HeightRequest="45"/>
            </StackLayout>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                               IsVisible="False" 
                               IsRunning="False"
                               Color="#3366FF"
                               HeightRequest="40"
                               Margin="0,20"/>

            <!-- Footer Info -->
            <Frame BackgroundColor="#ECF0F1" CornerRadius="10" Margin="0,20,0,10" Padding="15">
                <StackLayout>
                    <Label Text="🔐 Tu información está segura" 
                           FontSize="12" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"/>
                    <Label Text="Utilizamos Firebase Authentication para proteger tus datos" 
                           FontSize="10" 
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>