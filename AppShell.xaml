<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppIntegradora10A.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppIntegradora10A"
    xmlns:views="clr-namespace:AppIntegradora10A.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AppIntegradora10A">

    <!-- Página de Login como página inicial -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Página principal del CRUD -->
    <ShellContent
        Title="Menu Principal"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>