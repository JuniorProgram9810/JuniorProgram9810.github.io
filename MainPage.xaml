<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppIntegradora10A.MainPage"
             Title="Menu Principal">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cerrar Sesión" 
                     Clicked="OnLogout_Clicked"
                     Order="Primary"
                     Priority="0" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Menu Principal" 
               FontSize="28" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#3366FF"
               Margin="0,20,0,30"/>

        <Button Text="Agregar Producto" 
                x:Name="OnAddProduct" 
                Clicked="OnAddProduct_Clicked"
                BackgroundColor="#3366FF"
                TextColor="White"
                FontSize="16"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,10"/>

        <Button Text="Lista de Productos" 
                x:Name="OnListProduct" 
                Clicked="OnListProduct_Clicked"
                BackgroundColor="#28a745"
                TextColor="White"
                FontSize="16"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,10"/>
    </StackLayout>

</ContentPage>
