<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppIntegradora10A.MainPage"
             Title="GameSupport Hub"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header con información del usuario -->
            <Frame BackgroundColor="#3498DB" HasShadow="True" CornerRadius="15" Padding="20">
                <StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                        <Label Text="🎮" FontSize="40" TextColor="White" VerticalOptions="Center"/>
                        <StackLayout VerticalOptions="Center">
                            <Label Text="GameSupport Hub" 
                                   FontSize="24" 
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label x:Name="LblBienvenida" 
                                   Text="¡Hola Usuario!" 
                                   FontSize="16" 
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label x:Name="LblEmailUsuario" 
                                   Text="usuario@email.com" 
                                   FontSize="12" 
                                   TextColor="#E8F4FD"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </StackLayout>

                    <!-- Información del tipo de usuario -->
                    <Label x:Name="LblInfoAdmin" 
                           Text="Panel de Usuario" 
                           FontSize="12" 
                           TextColor="#E8F4FD"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Estadísticas -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="15" Padding="20">
                <StackLayout>
                    <Label Text="📊 TUS ESTADÍSTICAS" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"
                           Margin="0,0,0,15"/>

                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="10">

                        <!-- Total Reportes -->
                        <Frame Grid.Column="0" BackgroundColor="#3498DB" CornerRadius="10" Padding="15" HasShadow="False">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="📋" FontSize="24" HorizontalOptions="Center" TextColor="White"/>
                                <Label x:Name="LblTotalReportes" Text="0" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                                <Label Text="Total" FontSize="12" HorizontalOptions="Center" TextColor="White"/>
                            </StackLayout>
                        </Frame>

                        <!-- Reportes Abiertos -->
                        <Frame Grid.Column="1" BackgroundColor="#E74C3C" CornerRadius="10" Padding="15" HasShadow="False">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="🔴" FontSize="24" HorizontalOptions="Center"/>
                                <Label x:Name="LblReportesAbiertos" Text="0" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                                <Label Text="Abiertos" FontSize="12" HorizontalOptions="Center" TextColor="White"/>
                            </StackLayout>
                        </Frame>

                        <!-- Reportes Resueltos -->
                        <Frame Grid.Column="2" BackgroundColor="#27AE60" CornerRadius="10" Padding="15" HasShadow="False">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="✅" FontSize="24" HorizontalOptions="Center"/>
                                <Label x:Name="LblReportesResueltos" Text="0" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                                <Label Text="Resueltos" FontSize="12" HorizontalOptions="Center" TextColor="White"/>
                            </StackLayout>
                        </Frame>

                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Acciones Principales -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="15" Padding="20">
                <StackLayout Spacing="10">
                    <Label Text="🚀 ACCIONES PRINCIPALES" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"
                           Margin="0,0,0,15"/>

                    <Button Text="➕ Reportar Nueva Incidencia"
                            x:Name="OnAddProduct"
                            Clicked="OnAddProduct_Clicked"
                            BackgroundColor="#27AE60"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="25"
                            HeightRequest="55"/>

                    <Button Text="📋 Ver Todos los Reportes"
                            x:Name="OnListProduct"
                            Clicked="OnListProduct_Clicked"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="25"
                            HeightRequest="55"/>

                    <Button Text="🔄 Actualizar Estadísticas"
                            x:Name="BtnActualizar"
                            Clicked="BtnActualizar_Clicked"
                            BackgroundColor="#F39C12"
                            TextColor="White"
                            FontSize="14"
                            CornerRadius="25"
                            HeightRequest="45"/>
                </StackLayout>
            </Frame>

            <!-- Botón Exclusivo para Admin -->
            <Button x:Name="BtnEstadisticasAdmin"
                    Text="👑 Estadísticas Completas (Admin)"
                    Clicked="BtnEstadisticasAdmin_Clicked"
                    BackgroundColor="#8E44AD"
                    TextColor="White"
                    FontSize="14"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="45"
                    IsVisible="False"/>

            <!-- Filtros Rápidos -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="15" Padding="20">
                <StackLayout>
                    <Label Text="🎯 FILTROS RÁPIDOS" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"
                           Margin="0,0,0,15"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                        <Button Grid.Row="0" Grid.Column="0"
                                Text="🐛 Bugs"
                                x:Name="BtnFiltrarBugs"
                                Clicked="BtnFiltrarBugs_Clicked"
                                BackgroundColor="#E67E22"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="20"
                                HeightRequest="40"/>

                        <Button Grid.Row="0" Grid.Column="1"
                                Text="💥 Crashes"
                                x:Name="BtnFiltrarCrashes"
                                Clicked="BtnFiltrarCrashes_Clicked"
                                BackgroundColor="#E74C3C"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="20"
                                HeightRequest="40"/>

                        <Button Grid.Row="1" Grid.Column="0"
                                Text="⚡ Performance"
                                x:Name="BtnFiltrarPerformance"
                                Clicked="BtnFiltrarPerformance_Clicked"
                                BackgroundColor="#9B59B6"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="20"
                                HeightRequest="40"/>

                        <Button Grid.Row="1" Grid.Column="1"
                                Text="🚨 Críticos"
                                x:Name="BtnFiltrarCriticos"
                                Clicked="BtnFiltrarCriticos_Clicked"
                                BackgroundColor="#C0392B"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="20"
                                HeightRequest="40"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Opciones Adicionales -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="15" Padding="20">
                <StackLayout Spacing="10">
                    <Label Text="⚙️ OPCIONES" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"
                           Margin="0,0,0,15"/>

                    <Button Text="❓ Ayuda y Soporte"
                            x:Name="BtnAyuda"
                            Clicked="BtnAyuda_Clicked"
                            BackgroundColor="#34495E"
                            TextColor="White"
                            FontSize="14"
                            CornerRadius="25"
                            HeightRequest="45"/>

                    <Button Text="🚪 Cerrar Sesión"
                            x:Name="OnLogout"
                            Clicked="OnLogout_Clicked"
                            BackgroundColor="#95A5A6"
                            TextColor="White"
                            FontSize="14"
                            CornerRadius="25"
                            HeightRequest="45"/>
                </StackLayout>
            </Frame>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                               IsVisible="False" 
                               IsRunning="False"
                               Color="#3498DB"
                               HeightRequest="40"/>

            <!-- Footer -->
            <Frame BackgroundColor="#ECF0F1" CornerRadius="10" Padding="15" Margin="0,10,0,20">
                <StackLayout>
                    <Label Text="🎮 GameSupport Hub v2.0" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"/>
                    <Label Text="Sistema de reportes con roles de usuario" 
                           FontSize="12" 
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>