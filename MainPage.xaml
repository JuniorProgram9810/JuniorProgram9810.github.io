<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="PollAventuras.Views.MainPage">

    <!-- Pestaña de Inicio -->
    <ContentPage Title="Inicio" IconImageSource="home.png">
        <StackLayout>
            <Label Text="Bienvenido a PollAventuras" FontSize="Title"/>
            <Button Text="Ver Pistas" Command="{Binding NavigateToHintsCommand}"/>
            <Button Text="Soporte Técnico" Command="{Binding NavigateToSupportCommand}"/>
        </StackLayout>
    </ContentPage>

    <!-- Pestaña de Pistas -->
    <ContentPage Title="Pistas" IconImageSource="hints.png">
        <CollectionView ItemsSource="{Binding GameHints}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="Subtitle"/>
                        <Label Text="{Binding Level}" FontAttributes="Italic"/>
                        <Label Text="{Binding Description}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage>

    <!-- Pestaña de Soporte -->
    <ContentPage Title="Soporte" IconImageSource="support.png">
        <StackLayout>
            <Button Text="Nuevo Ticket" Command="{Binding CreateNewTicketCommand}"/>
            <CollectionView ItemsSource="{Binding SupportTickets}">
                <!-- Plantilla para mostrar tickets existentes -->
            </CollectionView>
        </StackLayout>
    </ContentPage>
</TabbedPage>
